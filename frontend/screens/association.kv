<AssociationScreen>:
    name: "association"
    BoxLayout:
        orientation: 'vertical'
        padding: dp(15), dp(10)
        spacing: dp(10)
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [15]

        Label:
            text: "Bienvenue dans l'espace Association"
            font_size: dp(20)
            color: 0, 0, 0, 1
            halign: 'center'
            valign: 'middle'
            text_size: self.size
